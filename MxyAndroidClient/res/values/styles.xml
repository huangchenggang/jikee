<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- guide bar -->
    <style name="guide_bar_txt_style">
        <item name="android:textColor">@drawable/guide_bar_txt_selector</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">10sp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    
    <!-- product list -->
    <style name="product_list_item_title_style">
        <item name="android:textColor">@drawable/product_list_item_title_txt_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/product_list_item_title_txt_size</item>
        <item name="android:duplicateParentState">true</item>
    </style>
    <style name="product_list_item_detial_style">
        <item name="android:textColor">@drawable/product_list_item_detial_txt_selector</item>
        <item name="android:textSize">@dimen/product_list_item_detial_txt_size</item>
        <item name="android:duplicateParentState">true</item>
    </style>
    
    <!-- home page -->
    <style name="home_page_btn_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:clickable">true</item>
    </style>
    
    <!-- product view activity -->
    <style name="product_view_name_en_style">
        <item name="android:textColor">@drawable/common_reverse_txt_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold|normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:clickable">true</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="product_view_name_style">
        <item name="android:textColor">@drawable/common_reverse_txt_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:clickable">true</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <!-- login -->
    <style name="login_prefix_txt_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/login_common_txt_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="login_hit_txt_style">
        <item name="android:textColorHint">#bababa</item>
        <item name="android:textSize">@dimen/login_common_txt_size</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="login_reg_btn_txt_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_common_txt_size</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="copy_right_txt_style">
        <item name="android:textColor">@color/copy_right_txt_color</item>
        <item name="android:textSize">@dimen/login_common_txt_size</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- account -->
    <style name="account_info_txt_style">
        <item name="android:textColor">@color/account_info_txt_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <style name="account_item_txt_style">
        <item name="android:textColor">@drawable/common_reverse_txt_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <!-- register -->
    <style name="reg_prefix_txt_style">
        <item name="android:textColor">#676767</item>
        <item name="android:textSize">@dimen/login_common_txt_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="reg_hit_txt_style">
        <item name="android:textColorHint">#bababa</item>
        <item name="android:textSize">@dimen/login_common_txt_size</item>
        <item name="android:gravity">left</item>
    </style>
    <!-- order list -->
    <style name="order_list_common_txt_style">
        <item name="android:textColor">@color/order_list_common_color</item>
        <item name="android:textSize">@dimen/order_list_common_txt_size</item>
    </style>
    <style name="order_list_black_txt_style">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/order_list_common_txt_size</item>
    </style>
</resources>