<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guide_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/home_page"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/home_btn_selector"
        android:clickable="true" >

        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:text="@string/home_page"
            style="@style/guide_bar_txt_style"/> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/product_btn_selector"
        android:clickable="true" >
        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:text="@string/product"
            style="@style/guide_bar_txt_style"/> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/account_btn_selector" >
        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:text="@string/account"
            style="@style/guide_bar_txt_style"/> -->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/shopping_trolley"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/trollery_btn_selector" >
        <TextView
	        android:id="@+id/trolley_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top|right"
	        android:background="@drawable/nub_icon"
	        android:gravity="center"
	        android:paddingBottom="2dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:layout_marginRight="-5dp"
	        android:text="5"
	        android:textColor="@android:color/white"
	        android:visibility="gone" />
        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:text="@string/trollery"
            style="@style/guide_bar_txt_style"/> -->
    </FrameLayout>

    <LinearLayout
        android:id="@+id/share"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/share_btn_selector" >
        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:text="@string/share"
            style="@style/guide_bar_txt_style"/> -->
    </LinearLayout>

</LinearLayout>