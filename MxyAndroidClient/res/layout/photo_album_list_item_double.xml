<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:textSize="18sp"
            android:id="@+id/album_item_double_tv_hide"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ll_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/album_item_double_tv_title"
                    android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <include
                    android:id="@+id/album_item_double_tv_iv_pic"
                    layout="@layout/photo_album_choose_pic_item"
                    android:layout_width="@dimen/photo_album_pic_item_width"
    				android:layout_height="@dimen/photo_album_pic_item_height"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true" />
<!--                 <ImageView
                    android:id="@+id/album_item_double_tv_iv_pic"
                    android:layout_width="75dp"
                    android:layout_height="63dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/addphoto3_btn_selector"
                    android:duplicateParentState="true" /> -->

                <TextView
                    
                    android:id="@+id/album_item_double_tv_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/photo_album_detial_desc_txt_color" />
            </LinearLayout>

            <LinearLayout
                   android:layout_weight="1"
                android:id="@+id/ll_2"
                  android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                      android:textSize="16sp"
                    android:id="@+id/album_item_double_tv_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <include
                    android:id="@+id/album_item_double_tv_iv_pic2"
                    layout="@layout/photo_album_choose_pic_item"
                    android:layout_width="@dimen/photo_album_pic_item_width"
    				android:layout_height="@dimen/photo_album_pic_item_height"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true" />
<!--                 <ImageView
                    android:id="@+id/album_item_double_tv_iv_pic2"
                    android:layout_width="75dp"
                    android:layout_height="63dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/addphoto2_btn_selector"
                    android:duplicateParentState="true" /> -->

                <TextView
                    android:id="@+id/album_item_double_tv_bottom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/photo_album_detial_desc_txt_color" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>